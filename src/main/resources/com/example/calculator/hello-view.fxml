<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="191.0" prefWidth="223.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculator.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="30.0">
         <children>
            <TextField fx:id="numF" />
            <TextField fx:id="numS" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="plusBtn" mnemonicParsing="false" onAction="#onPlusButtonClick" text="+" />
            <Button fx:id="minusBtn" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onMinusButtonClick" text="-" />
            <Button fx:id="multBtn" layoutX="62.0" layoutY="10.0" mnemonicParsing="false" onAction="#onMultButtonClick" text="*" />
            <Button fx:id="divBtn" layoutX="114.0" layoutY="10.0" mnemonicParsing="false" onAction="#onDivButtonClick" text="/" />
            <Button fx:id="modBtn" layoutX="147.0" layoutY="10.0" mnemonicParsing="false" onAction="#onModButtonClick" text="\%" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label fx:id="output" prefHeight="47.0" prefWidth="214.0" />
         </children>
      </HBox>
   </children>
</VBox>
